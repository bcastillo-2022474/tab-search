{
  "scripts": {
    "start": "npm run start:firefox",
    "build": "npm run build:firefox",
    "watch": "npm run watch:firefox",
    "start:firefox": "BROWSER=firefox NODE_ENV=development webpack --progress --colors --watch",
    "start:chrome": "BROWSER=chrome NODE_ENV=development webpack --progress --colors --watch",
    "build:firefox": "BROWSER=firefox NODE_ENV=production webpack && npm run lint:web-ext",
    "build:chrome": "BROWSER=chrome NODE_ENV=production webpack  && npm run lint:web-ext",
    "lint:web-ext": "web-ext lint -s dist/",
    "lint:eslint": "eslint 'src/**'",
    "zip:firefox": "npm run build:firefox && web-ext build -s ./dist --overwrite-dest",
    "watch:firefox": "web-ext run -s dist/",
    "test": "mocha --require babel-core/register --require chai/register-expect src/**/*.spec.js"
  },
  "dependencies": {
    "debounce": "^1.1.0",
    "fast-deep-equal": "^1.1.0",
    "fuse.js": "^3.0.5",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.9.1",
    "redux-webext": "^1.1.2",
    "rgb": "^0.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-object-loader": "0.0.7",
    "eslint": "^4.19.1",
    "eslint-config": "^0.3.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-import": "^2.10.0",
    "filewatcher-webpack-plugin": "^1.2.0",
    "fs-extra": "^4.0.3",
    "mocha": "^4.1.0",
    "svg-url-loader": "^2.3.2",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "web-ext": "^8.3.0",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-shell-plugin": "^0.5.0"
  }
}
